{
  "name": "tasktracker-hass-integration",
  "version": "1.0.0",
  "description": "TaskTracker Home Assistant integration",
  "scripts": {
    "test": "jest --coverage",
    "test:no-coverage": "jest",
    "test:watch": "jest --watch",
    "test:tasktracker-utils": "jest tasktracker-utils.test.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "custom_components/tasktracker/www/**/*.js",
      "!custom_components/tasktracker/www/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
